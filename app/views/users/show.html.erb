<div class="container">
  <div class="row text-center">
    <h3><%= @user.name %>様の投稿一覧</h3>
  </div>
  <div class="row">
    <table class="table table-hover table-invrese">
      <thead>
        <tr>
          <th>推しメン</th>
          <th>タイトル</th>
          <th>カテゴリー</th>
          <th>投稿日時</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td>
              <span class="label label-primary">
                <%= post.member %>
              </span>
            </td>
            <td>
              <%= post.title %>
            </td>
            <td>
              <%= post.category.group %>
            </td>
            <td>
              <%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
            </td>
            <td>
              <%= link_to "詳細画面" ,post_path(post.id) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="text-center">
      <%#= paginate @posts %>
    </div>
  </div>
</div>
